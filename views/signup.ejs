    .input-field {
        position: relative;
        border-bottom: 2px solid white;
        margin: 15px 0;
    }

    .input-field:hover {
        border-bottom: 2px solid rgb(165, 144, 144);
        transition: 0.15s ease;
    }

    .input-field label {
        position: absolute;
        top: 50%;
        left: 0%;
        transform: translateY(-40%);
        color: white;
        font-size: 20px;
        pointer-events: none;
        transition: 0.15s ease;
    }

    .input-field input {
        width: 100%;
        height: 40px;
        background: transparent;
        border: none;
        outline: none;
        font-size: 20px;
        font-family: 'Arial', sans-serif;
        color: rgb(255, 255, 255);
        padding-left: 10px;
    }

    .input-field input:focus~label,
    .input-field input:valid~label {
        font-size: 2rem;
        top: 10px;
        transform: translateY(-120%);
        color: white;
        font-size: 14px;
        font-family: 'Arial', sans-serif;
    }

    .forget {
        display: flex;
        align-items: center;
        justify-content: space-between;
        color: white;
    }

    #remember {
